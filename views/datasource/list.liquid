{% capture title %}{% t 'Data sources' %}{% endcapture %}
{% layout 'layout/layout' title: title %}

{% block head %}
    {% render 'partials/notify' %}
    {% render 'partials/introjs'  %}
    <script defer src="s/angular/angular.min.js"></script>
    <script defer src="s/angular-sanitize/angular-sanitize.min.js"></script>
    {% render 'partials/ng/core' %}
    {% render 'partials/ng/table' %}
    {% render 'partials/ng/datasource-list' %}
{% endblock %}

{% block content %}
    <div class="container-fluid root-container">
        <div class="row">
            <div class="col-md-3">
                {% render 'sidebar', user: user %}
            </div>

            <div class="main col-md-9" ng-app="app.datasource-list">
                <app-datasource-list></app-datasource-list>
            </div>
        </div>
    </div>
{% endblock %}
